/* index_package/pages/cosmetics/cosmetics.wxss */
page{
  background-color: #f3f4f5;
  padding-bottom: 120rpx; 
}
.holder{
  font-size: 26rpx;
  color: #999999;
}
.first-party{
  background-color: #fff;
  font-size: 28rpx;
  color: #333;
}
.detail-info,.first-name{
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  padding: 20rpx 0rpx;
  border-bottom: 2rpx solid #e9e9e9;
}
.detail-info image{
  width: 28rpx;
  height: 28rpx;
  margin-left: 10rpx;
}


.head{
  margin-left: 30rpx;
  padding: 20rpx 0rpx;
  font-size: 28rpx;
}
.radio-group radio{
  transform: scale(.8);
}
.head-txt{
  padding: 20rpx 30rpx;
}
.head-txt textarea{
  background-color: #F2F3F7;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  width: 94%;
  height: 180rpx;
  color: #333;
}
/* 基本信息 */
.basic-box{
  background-color: #fff;
  margin: 20rpx 0rpx;
}
.info-item{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  margin-left: 30rpx;
  border-bottom: 2rpx solid #e9e9e9;
  padding: 20rpx 0px;
}
.info-item view,.first-name text{
  display: inline-block;
  width: 160rpx;
  /* background-color: cyan; */
}
.import{
  color: #FF5062;
}
.rd{
  transform: scale(.8);
}
.area{
  font-size: 28rpx;
  padding: 10rpx 30rpx;
}
.a-title{
  display: inline-block;
  width: 160rpx;
}
.region{
  color: #999999;
}
.r-active{
  color: #333;
}
/* 下一步 */
.sub-box{
  width: 100%;
  height: 118rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #fff;
  border-top: 2rpx solid #e9e9e9;
}
.next{
  width: 690rpx;
  height: 76rpx;
  background-color: #2190FE;
  border-radius: 38rpx;
  text-align: center;
  line-height: 76rpx;
  font-size: 26rpx;
  color: #fff;
}

.sub-btn{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  /* background-color: cyan; */
}