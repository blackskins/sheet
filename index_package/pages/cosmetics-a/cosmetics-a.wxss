/* index_package/pages/cosmetics-a/cosmetics-a.wxss */
page{
  background-color: #f3f4f5;
  font-size: 28rpx;
  padding-bottom: 120rpx; 
}
.holder{
  font-size: 26rpx;
  color: #999999;
}

/* 基本信息 */
.line:l{
  height:0rpx;
}
/* 第一部分 样品信息*/
.first-part,.sample-info{
  background-color: #fff;
}

.detail-info,.first-name{
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  padding: 20rpx 0rpx;
  border-bottom: 2rpx solid #e9e9e9;
}
.s-tips{
  display: flex;
  align-items: center;
}
.s-tips image{
  width: 28rpx;
  height: 28rpx;
  margin-left: 10rpx;
}

.info-item{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  margin-left: 30rpx;
  border-bottom: 2rpx solid #e9e9e9;
  padding: 20rpx 0px;
}
.info-item view,.first-name text{
  display: inline-block;
  width: 160rpx;
  /* background-color: cyan; */
}
.info-item input{
  width: 500rpx;
}
.import{
  color: #FF5062;
}

.else-item{
  padding: 30rpx;
}
.else-item text{
  padding: 6rpx 30rpx;
  font-weight: 600;
  background-color: #E3EDFC;
  color: #2090FE;
}

/* 样品类别 */
.sample-info{
  padding: 10rpx 30rpx 30rpx 30rpx;
  line-height:56rpx;
  margin: 20rpx 0rpx;
}
.radio-group{
  display: flex;
  flex-wrap: wrap;
}
.radio{
  transform: scale(0.9);
}
.sample-info input{
  border: 2rpx solid #e9e9e9;
  width: 360rpx;
  height: 40rpx;
  padding: 0rpx 10rpx;
  margin-top: 4rpx;
}

/* 样品来源 */
.save{
  width: 140rpx !important;
  margin-right: 10rpx;
}

/* 委托要求 */
.head-txt{
  padding: 20rpx 0rpx;
}
.head-txt textarea{
  background-color: #F2F3F7;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  width: 94%;
  height: 180rpx;
  color: #333;
  line-height: 38rpx !important;
}


/* 下一步 */
.sub-box{
  width: 92%;
  height: 118rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #fff;
  border-top: 2rpx solid #e9e9e9;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 4%;
}
.step{
  width: 326rpx;
  height: 72rpx;
  border-radius: 38rpx;
  text-align: center;
  line-height: 76rpx;
  font-size: 26rpx;
  border: 2rpx solid #2190FE;
}
.previous{
  color: #2190FE;
}
.next{
  background-color: #2190FE;
  color: #fff;
  position: relative;
}
.sub-btn{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  /* background-color: cyan; */
}

/* 删除样品信息项 */
.base-info{
  position: relative;
}
 .del-item{
   position: absolute;
   right: 0rpx;
   top: 0rpx;
   width: 60rpx;
   height: 60rpx;
   /* background-color: rgba(0, 0, 0, .5); */
 }
 .del-item::after,.del-item::before{
  content: '';
   position: absolute;
   left: 50%;
   top: 50%;
   background-color: #ccc;
   transform: translate(-50%,-50%) rotate(45deg);
 }
 .del-item::before{
   width: 2rpx;
   height: 40rpx;
 }
 .del-item::after{
   width: 40rpx;
   height: 2rpx;
 }

 /* 说明 */
.mask{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .7);
  transition: all .3s;
  z-index: 101;
}
.agreement,.agreement1{
  position: absolute;
  left: 50%;
  top: 50%;
  /* transform: translate(-50%,-50%); */
  width: 500rpx;
  height: 600rpx;
  border-radius: 14rpx;
  background-color: #fff;
  padding: 30rpx 40rpx;
  transition: all .3s;
}
.agreement1{
  height:200rpx;
}
.agreement-title{
  font-size: 30rpx;
  font-weight: 600;
}
.agreement-txt{
  margin-top: 20rpx;
  height: 440rpx;
  font-size: 26rpx;
}
.isAgree{
  font-size: 30rpx;
  color: #2090fe;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 2rpx solid #e9e9e9;
  height: 92rpx;
  margin-top: 20rpx;
}
.isAgree view{
  width: 50%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
}
.cancel-btn{
  position: relative;
}
.cancel-btn::after{
  position: absolute;
  content: '';
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  background-color: #e9e9e9;
  height: 40rpx;
}