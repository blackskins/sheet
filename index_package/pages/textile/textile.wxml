<!--index_package/pages/textile/textile.wxml-->
<form bindsubmit='formSummt'>
<!-- 基本信息 -->
  <view class='first-party'>
    <view class='detail-info'>
      <text>委托方信息</text>
      <image bindtap='show' src='../../images/tips.png'></image>
    </view>
    <view class='info-item'>
      <view>委托方
        <text class='import'>*</text>
      </view>
      <input hidden='{{ !hide }}' name='first-name' type='text' placeholder-class='holder' placeholder='请填写委托方'></input>
    </view>
    <view class='info-item'>
      <view>委托方地址</view>
      <input hidden='{{ !hide }}' type='text' name='address' placeholder-class='holder' placeholder='请填写委托方地址'></input>
    </view>
    <view class='info-item'>
      <view>联系人
        <text class='import'>*</text>
      </view>
      <input hidden='{{ !hide }}' type='text' name='user' placeholder-class='holder' placeholder='请填写联系人'></input>
    </view>
    <view class='info-item'>
      <view>电话/手机
        <text class='import'>*</text>
      </view>
      <input  hidden='{{ !hide }}'type='number' name='phone' placeholder-class='holder' placeholder='请填写联系人电话'></input>
    </view>
    <view class='info-item'>
      <view>E-mail/QQ</view>
      <input hidden='{{ !hide }}' type='text' name='email' placeholder-class='holder' placeholder='请填写E-mail/QQ'></input>
    </view>
  </view>

<!-- 生产单位 -->
  <view class='sample-info'>
    <view class='sample-title'>生产单位</view>
    <view class='sample-box'>
      <radio-group class="radio-group" bindchange="radioChange1">
        <radio class="radio" color='#2090FE' wx:for="{{ unit }}" wx:key="name" value="{{item.name}}" checked="{{item.checked}}">
          <text>{{item.value}}</text>
        </radio>
        <input hidden='{{ !hide }}' type='text'  class='unit' name='type' placeholder-class='holder' maxlength='24' placeholder='请填写'></input>
      </radio-group>
    </view>
  </view>

  <!-- 地址信息 -->
  <view class='sample-info'>
    <view class='sample-title'>报告寄送地址
      <text class='import'>*</text>
    </view>
    <view class='sample-box'>
      <radio-group bindchange="radioChange2">
        <radio class="radio" color='#2090FE' wx:for="{{ address }}" wx:key="name" value="{{item.name}}" checked="{{item.checked}}">
          <text>{{item.value}}</text>
        </radio>
      </radio-group>
    </view>
    <view class='head-txt'>
      <textarea hidden='{{ !hide }}' placeholder-class='holder' placeholder='其他快递地址请填写'></textarea>
    </view>
  </view>

  <!-- 下一步 -->
  <view class='sub-box center'>
    <view bindtap='toNextPage' class='next'>下一步
      <button class='sub-btn' formType="submit"></button>
    </view>
  </view>
</form>


