/* index_package/pages/textile/textile.wxss */
page{
  background-color: #f3f4f5;
  padding-bottom: 120rpx; 
  font-size: 28rpx;
}
.holder{
  font-size: 26rpx;
  color: #999999;
}
.first-party{
  background-color: #fff;
  font-size: 28rpx;
  color: #333;
}
.detail-info,.first-name{
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  padding: 20rpx 0rpx;
  border-bottom: 2rpx solid #e9e9e9;
}
.detail-info image{
  width: 28rpx;
  height: 28rpx;
  margin-left: 10rpx;
}


.head{
  margin-left: 30rpx;
  padding: 20rpx 0rpx;
  font-size: 28rpx;
}
.radio-group radio{
  transform: scale(.9) !important;
}

.head-txt textarea{
  background-color: #F2F3F7;
  margin-top: 10rpx;
  border-radius: 10rpx;
  padding: 2% 3%;
  width: 94%;
  height: 100rpx;
  color: #333;
  font-size: 26rpx;
  line-height: 36rpx !important;
}

.unit{
  margin-left: 16rpx;
  width: 600rpx !important;
}
/* 基本信息 */
.basic-box{
  background-color: #fff;
  margin: 20rpx 0rpx;
}
.info-item{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  margin-left: 30rpx;
  border-bottom: 2rpx solid #e9e9e9;
  /* padding: 20rpx 0px; */
  height: 94rpx;
}
.info-item view,.first-name text{
  display: inline-block;
  width: 180rpx;
  /* background-color: cyan; */
}
.info-item input{
  width: 500rpx;
}
.import{
  color: #FF5062;
}

/* 省市区 */
.area{
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}
.a-title{
  display: inline-block;
  width: 160rpx;
}
.region{
  color: #999999;
}
.r-active{
  color: #333;
}
/* 样品类别 */
.sample-info{
  padding: 10rpx 30rpx 30rpx 30rpx;
  line-height:56rpx;
  margin: 20rpx 0rpx;
  background-color: #fff;
}
.radio-group{
  display: flex;
  flex-wrap: wrap;
}
.radio{
  transform: scale(0.9);
}
.sample-info input{
  border: 2rpx solid #e9e9e9;
  width: 360rpx;
  height: 50rpx;
  padding: 0rpx 10rpx;
  margin-top: 4rpx;
}
/* 下一步 */
.sub-box{
  width: 100%;
  height: 118rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #fff;
  border-top: 2rpx solid #e9e9e9;
}
.next{
  position: relative;
  width: 690rpx;
  height: 76rpx;
  background-color: #2190FE;
  border-radius: 38rpx;
  text-align: center;
  line-height: 76rpx;
  font-size: 26rpx;
  color: #fff;
}

.sub-btn{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  /* background-color: cyan; */
}


/* 说明 */
.mask{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .7);
  transition: all .3s;
}
.agreement,.agreement1{
  position: absolute;
  left: 50%;
  top: 50%;
  /* transform: translate(-50%,-50%); */
  width: 500rpx;
  height: 600rpx;
  border-radius: 14rpx;
  background-color: #fff;
  padding: 30rpx 40rpx;
  transition: all .3s;
}
.agreement1{
  height:200rpx;
}
.agreement-title{
  font-size: 30rpx;
  font-weight: 600;
}
.agreement-txt{
  margin-top: 20rpx;
  height: 440rpx;
  font-size: 26rpx;
}
.isAgree{
  font-size: 30rpx;
  color: #2090fe;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 2rpx solid #e9e9e9;
  height: 92rpx;
  margin-top: 20rpx;
}
.isAgree view{
  width: 50%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
}
.cancel-btn{
  position: relative;
}
.cancel-btn::after{
  position: absolute;
  content: '';
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  background-color: #e9e9e9;
  height: 40rpx;
}