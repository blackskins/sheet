}

.count {
  display: flex;
}

.count input {
  width: 160rpx;
  margin: 0rpx 10rpx;
}
/* 未选中样式 */
checkbox .wx-checkbox-input {
  border-radius: 50%;
}
/* 报告格式----复选框样式 */
