checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  /* content: ''; */
  transform: translate(-53%,-53%);
  border-radius: 50%;
  background-color: #2090fe;
  border: 2rpx solid #2090fe;
}
.c1{
  margin-left: 28rpx;
}
.c2{
  margin-left: 26rpx;
}
.fu{
  margin-left: 24rpx;
}
/* 报告发送 */
.send-css{
  width: 650rpx !important;
}
/* 发票类别 */
.tickets{
  margin-left: 10rpx;
}
.ticket{
  margin-left: 10rpx;
  width: 510rpx !important;
}

/* 其他 */
.head-txt{
  padding: 20rpx 0rpx;
}
.head-txt textarea{
  background-color: #F2F3F7;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  width: 94%;
  height: 250rpx;
  color: #333;
  line-height: 38rpx !important;
}

/* 提交 */
.sub-box{
  width: 92%;
  height: 118rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #fff;
  border-top: 2rpx solid #e9e9e9;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 4%;
}
.step{
  width: 326rpx;
  height: 72rpx;
  border-radius: 38rpx;
  text-align: center;
  line-height: 76rpx;
  font-size: 26rpx;
  border: 2rpx solid #2190FE;
}
.previous{
  color: #2190FE;
}
.next{
  background-color: #2190FE;
  color: #fff;
  position: relative;
}
.sub-btn{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  /* background-color: cyan; */
}

/* 委托服务协议 */
.mask{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .7);
  transition: all .3s;
  z-index: 1000;
}
.agreement,.agreement1{
  position: absolute;
  left: 50%;
  top: 50%;
  /* transform: translate(-50%,-50%); */
  width: 500rpx;
  height: 600rpx;
  border-radius: 14rpx;
  background-color: #fff;
  padding: 30rpx 40rpx;
  transition: all .3s;
  z-index: 10000;
}
.agreement1{
  height:200rpx;
}
.agreement-title{
  font-size: 30rpx;
  font-weight: 600;
}
.agreement-txt{
  margin-top: 20rpx;
  height: 440rpx;
  font-size: 26rpx;
  word-break: break-all;
  word-wrap: break-word;
}
.isAgree{
  font-size: 30rpx;
  color: #2090fe;
  display: flex;
  justify-content: space-around;
  align-items: center;
  border-top: 2rpx solid #e9e9e9;
  height: 92rpx;
  margin-top: 20rpx;
}
.isAgree view{
  width: 50%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
}
.cancel-btn{
  position: relative;
}
.cancel-btn::after{
  position: absolute;
  content: '';
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 2rpx;
  background-color: #e9e9e9;
  height: 40rpx;
}