  margin-right: 10rpx;
}
.sample-info {
  padding: 10rpx 30rpx 30rpx 30rpx;
  line-height: 56rpx;
  margin: 20rpx 0rpx;
}

.radio-group {
  display: flex;
  flex-wrap: wrap;
}

.fn {
  flex-direction: column;
  flex-wrap: nowrap !important;
}

.radio,.checkbox{
