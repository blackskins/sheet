/* profile_package/pages/apply/apply.wxss */
page{
  background-color: #f3f4f5;
}
.item-box{
  background-color: #fff;
}
.holder{
  font-size: 26rpx;
  color: #999999;
}
.info-item{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  margin-left: 30rpx;
  border-bottom: 2rpx solid #e9e9e9;
  padding: 20rpx 0px;
}
.info-item:last-child{
  border: none;
}
.info-item view,.first-name text{
  display: inline-block;
  width: 160rpx;
  /* background-color: cyan; */
}
.info-item input{
  width: 520rpx;
}
.import{
  color: #FF5062;
}


/* 提交审核 */
.sub-box{
  width: 100%;
  height: 118rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  background-color: #fff;
  border-top: 2rpx solid #e9e9e9;
}
.next{
  width: 690rpx;
  height: 76rpx;
  background-color: #2190FE;
  border-radius: 38rpx;
  text-align: center;
  line-height: 76rpx;
  font-size: 26rpx;
  color: #fff;
}

.sub-btn{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  /* background-color: cyan; */
}

/* 提交表单时的弹窗 */
.mask{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0%;
  top: 0%;
  background-color: rgba(0, 0, 0, 0.7);
  transition: all .3s;
}
.tips-window{
  width: 500rpx;
  height: 220rpx;
  background-color: #fff;
  border-radius: 10rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  padding: 0rpx 40rpx; 
  transition: all .3s;
}
.tips{
  font-size: 30rpx;
  height: 122rpx;
  line-height: 122rpx;
  text-align: center;
  border-bottom: 2rpx solid #e9e9e9;
}
.btn-box{
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 28rpx;
  color: #2190FE;
  height: 98rpx;
}
.btn-box view{
  /* width: 100%; */
  height: 98rpx;
  line-height: 98rpx;
  padding: 0rpx 30rpx;
}