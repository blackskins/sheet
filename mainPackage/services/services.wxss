/* mainPackage/services/services.wxss */

/* 委托服务类型列表 */
.service-list{
  margin: 0rpx 30rpx;  
  margin-top: 20rpx;
}
.hua{
  background: linear-gradient(to right,#4B99FF,#58DBFF);
}
.fang{
  background: linear-gradient(to right,#FF539D,#FFAA64);
}
.service-item{
  display: flex;
  align-items: center;
  height: 180rpx;
  border-radius: 6rpx;
  margin-bottom: 30rpx;
  position: relative;
}
.service-item::after{
  position: absolute;
  content: '';
  width: 14rpx;
  height: 14rpx;
  border-top: 2rpx solid #fff;
  border-right: 2rpx solid #fff;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%) rotate(45deg);
}
.icon{
  margin: 0rpx 30rpx;
}
.icon image{
  width: 100rpx;
  height: 100rpx;
}
.service-title{
  color: #fff;
  display: flex;
  flex-direction: column;
  line-height: 50rpx;
}
.cn{
  font-size: 30rpx;
  font-weight: 600;
}
.en{
  font-size: 32rpx;
  font-weight: normal;
}