/* mainPackage/index/index.wxss */

page {
  background-color: #f3f4f5;
}

/* 轮播图 */

.slider, .slider swiper, .slider image {
  width: 100%;
  height: 330rpx;
  background-color: #eee;
}

.slider1 {
  display: flex;
  background-color: #fff;
  padding: 0rpx 3%;
}

.slider1 swiper {
  width: 80%;
  height: 72rpx;
  /* background-color: #ccc; */
}

.slider1 swiper-item {
  display: flex;
  align-items: center;
}

/* 委托 */

.hot-title {
  padding: 30rpx 30rpx 10rpx 30rpx;
  background-color: #fff;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  font-weight: 600;
}

.stick {
  display: inline-block;
  width: 6rpx;
  height: 30rpx;
  background-color: #2179fc;
  margin-right: 16rpx;
}

/* 委托类型 */

.service-type {
  background-color: #fff;
  padding: 20rpx 30rpx 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.service-type image {
  width: 333rpx;
  height: 96rpx;
}

/* 关于我们 */

.video {
  padding: 20rpx 30rpx 30rpx 30rpx;
  font-size: 26rpx;
  color: #333;
  background-color: #fff;
  margin-bottom: 20rpx;
}

.video-content {
  height: 400rpx;
  background-color: chartreuse;
}

.video-content video {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 0;
}

.video-txt {
  position: relative;
  margin-top: 20rpx;
}

.video-txt image {
  position: absolute;
  width: 26rpx;
  height: 15rpx;
  right: -20rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 20rpx;
}

/* 最新资讯 */

.hot-list {
  background-color: #fff;
}

.list-left image {
  width: 160rpx;
  height: 160rpx;
  background-color: #ccc;
  margin-right: 20rpx;
}

.bottom-line {
  display: flex;
  margin-left: 30rpx;
  padding: 20rpx 0rpx;
  border-bottom: 2rpx solid #e9e9e9;
}

.list-right {
  width: 500rpx;
}

.list-title {
  font-size: 26rpx;
  font-weight: 600;
  margin-top: 20rpx;
  max-width: 460rpx;
}

.type {
  max-width: 500rpx;
  font-size: 24rpx;
  padding: 10rpx 0rpx;
  color: #808080;
}

.deal-type {
  margin-left: 20rpx;
}

.list-time {
  font-size: 26rpx;
  color: #c8c8c8;
}


/* 客服悬浮按钮 */
.chat{
  position: fixed;
  right: 30rpx;
  bottom: 80rpx;
  z-index: 50;
  width: 88rpx;
  height: 88rpx;
}
.chat image{
  width: 88rpx;
  height: 88rpx;
}
.chat button{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 60;
}


/* 优惠券弹窗 */



.popup, .pop-img {
  width: 530rpx;
  height: 608rpx;
}
.popup {
  position: absolute;
  z-index: 10000;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  border-radius: 10rpx;
  transition: all 0.3s;
}
.pop-get{
  position: absolute;
  left: 50%;
  bottom: 30rpx;
  transform: translateX(-50%);
  width: 386rpx;
  height: 66rpx;
  background-color: #2179fc;
  color: #fff;
  font-size: 28rpx;
  line-height: 66rpx;
  text-align: center;
  border-radius: 33rpx;
  animation: breath 1.75s infinite ease-in-out;
}
@keyframes breath{
  0%{
    transform: translateX(-50%) scale(1);
  }
  50%{
    transform: translateX(-50%) scale(1.05);
  }
  100%{
    transform: translateX(-50%) scale(1);
  }
}
.pop-cancel{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 20rpx;
  top: 20rpx;
}
.pop-cancel image{
  width: 50rpx;
  height: 50rpx;
}
