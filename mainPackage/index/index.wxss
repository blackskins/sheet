/* mainPackage/index/index.wxss */
page{
  background-color: #F3F4F5;
}
/* 轮播图 */
.slider,
.slider swiper,
.slider image{
  width:100%;
  height:330rpx;
  background-color: #eeeeee;
}
.slider1{
  display: flex;
  background-color: #fff;
  padding: 0rpx 3%;
}
.slider1 swiper{
  width: 80%;
  height:72rpx;
  /* background-color: #ccc; */
}
.slider1 swiper-item{
  display: flex;
  align-items: center;
}

/* 委托 */
.hot-title{
  padding: 30rpx 30rpx 10rpx 30rpx;
  background-color: #fff;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  font-weight: 600;
}
.stick{
  display: inline-block;
  width: 6rpx;
  height: 30rpx;
  background-color: #2179FC;
  margin-right: 16rpx;
}
/* 委托类型 */
.service-type{
  background-color: #fff;
  padding: 20rpx 30rpx 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.service-type image{
  width: 333rpx;
  height: 96rpx;
}

/* 关于我们 */
.video{
  padding: 20rpx 30rpx 30rpx 30rpx;
  font-size: 26rpx;
  color: #333;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.video-content{
  height: 400rpx;
  background-color: chartreuse;
}
.video-content video{
  width: 100%;
  height: 100%;
}
.video-txt{
  position: relative;
  margin-top: 20rpx;
}
.video-txt image{
  position: absolute;
  width: 26rpx;
  height: 15rpx;
  right: -20rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 20rpx;
}

/* 最新资讯 */
.hot-list{
  background-color: #fff;
}
.list-left image{
  width: 160rpx;
  height: 160rpx;
  background-color: #ccc;
  margin-right: 20rpx;
}
.bottom-line{
  display: flex;
  margin-left: 30rpx;
  padding: 20rpx 0rpx;
  border-bottom: 2rpx solid #e9e9e9;
}
.list-right{
  width: 500rpx;
}
.list-title{
  font-size: 26rpx;
  font-weight: 600;
  margin-top: 20rpx;
  max-width: 460rpx;
}
.type{
  max-width: 500rpx;
  font-size: 24rpx;
  padding: 10rpx 0rpx;
  color: #808080;
}
.deal-type{
  margin-left: 20rpx;
}
.list-time{
  font-size: 26rpx;
  color: #C8C8C8;
}