/* mainPackage/profile/profile.wxss */
page{
  background-color: #f3f4f5;
}
/* 头部基本信息 */
.basic-info{
  display: flex;
  flex-direction: column;
  align-items: center;
  /* justify-content: center; */
  width: 100%;
  height: 310rpx;
  background: url('http://daiyanjia.oss-cn-shenzhen.aliyuncs.com/e7e14e0babde45aeae4b841adef44049.jpg') no-repeat;
  background-size: 750rpx 310rpx;
  font-size: 28rpx;
  color: #fff;
}
.avatar image{
  width: 142rpx;
  height: 142rpx;
  border-radius: 50%;
  border: 4rpx solid #fff; 
}
.nick-name{
  margin-top: 30rpx;
}
.my-code{
  display: flex;
  margin-top: 20rpx;
}
.code{
  margin-right: 30rpx;
}
.code image{
  width: 36rpx;
  height: 36rpx;
}

/* 我的订单 */
.menu-list{
  height: 94rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #333;
  padding: 0rpx 30rpx;
  position: relative;
  border-bottom:2rpx solid #e9e9e9; 
  background-color: #fff;
}
.service-btn{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.menu-list::after{
  content: '';
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%) rotate(45deg);
  width: 14rpx;
  height: 14rpx;
  border-top: 2rpx solid #999999; 
  border-right: 2rpx solid #999999;
}
.icon{
  margin-right: 20rpx;
}
.icon image{
  width: 36rpx;
  height: 36rpx;
}

/* 订单状态 */
.order-status{
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  font-size: 24rpx;
  color: #333;
  background-color: #fff;
  margin-bottom: 20rpx;

}
.item-status{
  width: 25%;
  padding: 20rpx 0rpx;
  flex-direction: column;
}
.item-status image{
  width: 46rpx;
  height: 46rpx;
}
.order-title{
  margin-top: 10rpx;
}

