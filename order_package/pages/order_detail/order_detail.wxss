/* order_package/pages/order_detail/order_detail.wxss */
page{
  background-color: #f3f4f5;
}
/* 顶部地址信息 */
.address{
  display: flex;
  align-items: center;
  background-color: #fff;
  height: 172rpx;
  margin-bottom: 16rpx;
  padding: 0rpx 30rpx;
}
.address-icon image{
  width: 26rpx;
  height: 32rpx;
}
.address-info{
  margin-left: 16rpx;
}
.user-info{
  display: flex;
  align-items: center;
}
.user-name{
  display: inline-block;
  max-width: 380rpx;
  /* background-color: cyan; */
  font-size: 30rpx;
  font-weight: 600;
}
.phone{
  font-size: 26rpx;
  color: #9B9B9B;
  margin-left: 20rpx;
}
.detail-address{
  font-size: 26rpx;
  color: #333333;
  margin-top: 6rpx;
}


/* 订单详情 */
.order-detail{
  background-color: #fff;
  padding: 0rpx 30rpx;
}
/* 订单编号 B */
.num-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0rpx;
  border-bottom: 2rpx solid #e9e9e9;
}

.order-num {
  font-size: 26rpx;
  display: flex;
  align-items: center;
}

.order-icon image {
  width: 26rpx;
  height: 30rpx;
}
.order-num1 {
  margin-left: 14rpx;
  color: #333;
}
.order-status {
  font-size: 26rpx;
  color: #fff;
  background-color: #ff5062;
  width: 106rpx;
  height: 42rpx;
  border-radius: 10rpx;
  text-align: center;
  line-height: 42rpx;
}
.else-status{
  background-color: #FF8A4F !important;
}
/* 订单编号 End */

.program{
  font-size: 30rpx;
  font-weight: 600;
  padding: 20rpx 0rpx;
}
.base-info{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
}
.count{
  font-size: 26rpx;
  color: #9B9B9B;
}
.check-form{
  height: 46rpx;
  line-height: 46rpx;
  text-align: center;
  padding: 0rpx 20rpx;
  font-size: 26rpx;
  color: #2090FE;
  border: 2rpx solid #2090FE;
  border-radius: 25rpx;
}

/* 使用优惠券 */
.coupon{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0rpx 30rpx;
  height: 143rpx;
  background-color: #fff;
  margin-top: 16rpx;
  font-size: 26rpx;
}
.icon-title{
  display: flex;
  align-items: center;
}
.coupon-title{
  margin-left: 16rpx;
}
.icon image{
  width: 36rpx;
  height: 36rpx;
}
.coupon-money{
  margin-top: 10rpx;
  margin-left: 52rpx;
}
.coupon-money text{
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}
.coupon-right image{
  width: 31rpx;
  height: 32rpx;
}

/* 付款方式 */
.wx-pay{
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin-top: 16rpx;
}
.pay-type{
  font-size: 30rpx;
  font-weight: 600;
}
.pay-title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  padding: 20rpx 0rpx;
  border-bottom: 2rpx solid #e9e9e9;
}
.pay-count{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-top: 20rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}
.pay-count text{
  font-size: 34rpx;
  color: #ff5062;
}
.money-count{
  border: none;
}
.money{
  font-size: 28rpx;
}
/* 线下支付 */
.outline-pay{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin-top: 16rpx;
}
.line-title{
  font-size: 30rpx;
  font-weight: 600;
}
.card-num{
  font-size: 26rpx;
  color: #949494;
  padding-top: 10rpx;
}

.up-btn{
  font-size: 26rpx;
  width: 100rpx;
  height: 46rpx;
  border-radius: 25rpx;
  border: 2rpx solid #2090FE;
  color: #2090FE;
  line-height: 46rpx;
  text-align: center;
}

/* 底部按钮 */
.btn-box{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}
.btn-box view{
  width: 330rpx;
  height: 72rpx;
  border: 2rpx #2090FE solid;
  border-radius: 36rpx;
  margin-left: 26rpx;
  text-align: center;
  line-height: 72rpx;
  font-size: 28rpx;
}
.cancel{
  color: #2090FE;
}
.input-name{
  background-color: #2090FE;
  color: #fff;
}