/* order_package/pages/modify_report/modify_report.wxss */
/* 变更原因 */
page{
  background-color: #f3f4f5;
}
.change-reason{
  background-color: #fff;
  margin-bottom: 16rpx;
  padding: 20rpx 30rpx;
}

.change-title{
  font-size: 26rpx;
  padding-bottom: 20rpx;
  width: 100%;
}
.t1{
  background-color: #F2F3F7;
  width: 650rpx;
  height: 250rpx;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  color: #333;
  font-size: 28rpx;
}
.holder{
  font-size: 26rpx;
  color: #999999;
}
.modify-tips{
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #FF5062;
}
/* 提交申请 */
.submit{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 120rpx;
  background-color: #fff;
}
.sub-btn{
  width: 690rpx;
  height: 76rpx;
  line-height: 76rpx;
  background-color: #2190FE;
  text-align: center;
  position: relative;
  color: #fff;
  font-size: 28rpx;
  border-radius: 38rpx;
}
.sub-btn button{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}