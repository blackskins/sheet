/* order_package/pages/my_order/my_order.wxss */

page {
  background-color: #f3f4f5;
}

.tab-box {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  background-color: #fff;
}

.tab-item {
  width: 20%;
  height: 76rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  color: #9b9b9b;
  position: relative;
}

.active {
  font-weight: 600;
  color: #2090fe;
}

.active::after {
  content: '';
  position: absolute;
  width: 70%;
  height: 4rpx;
  background-color: #2090fe;
  left: 50%;
  bottom: 0;
  transform: translateX(-50%);
}

/* 订单列表切换 */

.slider, .slider swiper, .slider image {
  width: 100%;
  height: 100%;
  /* background-color: #ccc; */
}

/* .slider {
  padding-top: 20rpx;
} */

/* 订单项 */

.order-item {
  background-color: #fff;
  padding: 0 30rpx;
  height: 333rpx;
  margin-top: 20rpx;
}


.num-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0rpx;
  border-bottom: 2rpx solid #e9e9e9;
}

.order-num {
  font-size: 26rpx;
  display: flex;
  align-items: center;
}

.order-icon image {
  width: 26rpx;
  height: 30rpx;
}
.order-num1 {
  margin-left: 14rpx;
  color: #333;
}

.order-status {
  font-size: 26rpx;
  color: #fff;
  background-color: #ff5062;
  width: 106rpx;
  height: 42rpx;
  border-radius: 6rpx;
  text-align: center;
  line-height: 42rpx;
}
.else-status{
  background-color: #FF8A4F !important;
}
.order-title {
  font-size: 28rpx;
  font-weight: 600;
  padding: 26rpx 0rpx;
}

.order-date {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.submit-time {
  font-size: 24rpx;
  color: #9b9b9b;
}
.change-status{
  font-size: 30rpx;
  color: #2090FE;
}
.bottom-box{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  font-size: 24rpx;
  margin-top: 46rpx;
}
.bottom-box view{
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  padding: 0rpx 16rpx;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.update-info,.link{
  border: 2rpx #CDCDCD solid;
  color: #CDCDCD;
}
.link{
  position: relative;
}
.link button{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}
.check-detail{
  border: 2rpx #2090FE solid;
  color: #2090FE;
}


/* 画布 */
.canvas{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: #fff;
  overflow: scroll;
}

.save{
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: 20rpx;
  font-size: 28rpx;
  background-color: #ff5062;
  border-radius: 10rpx;
  width: 100rpx;
  height: 50rpx;
  color: #fff;
  text-align: center;
  line-height: 50rpx;
  margin: 10rpx auto;
}