/* order_package/pages/modify_form/modify_form.wxss */
page{
  background-color: #f3f4f5;
}
/* 样品序号 */
.list-num{
  display: flex;
  align-items: center;
  position: relative;
  font-size: 28rpx;
  color: #333;
}
.list-num,.res.res-front{
  height: 88rpx;
  padding: 0rpx 30rpx;
  background-color: #fff;

}
.list-num::after{
  position: absolute;
  content: '';
  right: 30rpx;
  top: 50%;
  border-top: 2rpx #ccc solid;
  border-right: 2rpx #ccc solid;
  transform: translateY(-50%) rotate(45deg);
  width: 16rpx;
  height: 16rpx;
}
.title-name{
  width: 200rpx;
  /* background-color: #ccc; */
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
}
.title-value{
  height: 88rpx;
  line-height: 88rpx;
  width: 490rpx;
}
.choose-mask{
  position: absolute;
  width: 100%;
  height: 88rpx;
  left: 0;
  top: 0;
  z-index: 10;
  /* background-color: cyan; */
}
/* 样品项 */
.item-box{
  margin-top: 20rpx;
  background-color: #fff;
  padding: 0rpx 30rpx;
  position: relative;
}
.item-box::after{
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  width: 750rpx;
  height: 2rpx;
  background-color: #e9e9e9;
  transform: translateY(-50%);
}
/* 修改前 */
.res-front,.res-after{
  display: flex;
}
.name-value{
  font-size: 26rpx;
  color: #555;
  height: 88rpx;
  line-height: 88rpx;
}
/* 修改后 */
.res-txt input{
  font-size: 26rpx;
  color: #333;
  height: 88rpx;
  width: 490rpx;
}
.holder{
  font-size: 26rpx;
  color: #999999;
}

/* 其他样品项 */
.sample-item{
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  padding: 0rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  position: relative;
  margin-top: 20rpx;
}
.sample-item::after{
  content: '';
  position: absolute;
  right: 30rpx;
  top: 50%;
  width: 16rpx;
  height: 16rpx;
  border-top: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
  transform: translateY(-50%) rotate(135deg);
}
.else-box{
  padding-bottom: 80rpx;
}
/* 修改按钮 */
.midify-box{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 750rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  padding: 0rpx 30rpx;
  background-color: #fff;
}
.modify-btn{
  height: 76rpx;
  background-color: #2190FE;
  color: #fff;
  font-size: 30rpx;
  border-radius: 38rpx;
  width: 690rpx;
  text-align: center;
  line-height: 76rpx;
}
.sub-btn{
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}